import cv2
import numpy as np

# Read image using RAW PATH
img = cv2.imread(r"C:\Users\srava\OneDrive\Desktop\Pictures\flower.jpg.png")

if img is None:
    print("Image not found")
else:
    # Show original image
    cv2.imshow("Original Image", img)

    # Create kernel (matrix of ones)
    kernel = np.ones((5,5), np.uint8)

    # Apply Dilation
    dilated = cv2.dilate(img, kernel, iterations=1)

    # Show Dilated Image
    cv2.imshow("Dilated Image", dilated)

    cv2.waitKey(0)
    cv2.destroyAllWindows()
