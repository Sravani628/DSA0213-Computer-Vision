import cv2, numpy as np

img = cv2.imread(r"C:\Users\srava\OneDrive\Desktop\Pictures\image5.jpg.png")

pts1 = np.float32([[0,0],[300,0],[0,300],[300,300]])
pts2 = np.float32([[50,50],[250,0],[0,250],[300,300]])

M = cv2.getPerspectiveTransform(pts1,pts2)
pers = cv2.warpPerspective(img,M,(400,400))

cv2.imshow("Perspective",pers)
cv2.waitKey(0)
